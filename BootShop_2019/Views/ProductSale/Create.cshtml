@model BootShop_2019.Models.ViewModels.ProductSaleViewModel

@{
    ViewData["Title"] = "Sell Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sell Product</h1>

<hr />
@if (Model?.Picture == null)
{
        <img height="150" width="150" class="img-thumbnail" src="~/img/logo-thumb.jpg" alt="Product Pic" />
}
else
{
        <img height="150" width="150" class="img-thumbnail" src="data:image/jpg;base64,@(Html.Raw(Convert.ToBase64String(Model.Picture)))" alt="Product Pic" />
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden/>
            <div class="form-group">
                <label asp-for="SalePersonName" class="control-label"></label>
                <select asp-for="SalePersonId" asp-items="Model?.SalePersonList" class="form-control"></select>
                <span asp-validation-for="SalePersonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sell" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
