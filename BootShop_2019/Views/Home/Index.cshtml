@model IEnumerable<BootShop_2019.Models.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .homeImage:hover{
        background-color: rebeccapurple;
    }

    h4{
        color: red;
    }
</style>

<h1 class="text-center">Point of Sale</h1>
    
<div class="col-md-12">
    @if (Model.Count() == 0)
    {
        <h4 class="text-center">No Product to sell</h4>
    }
    <div class="row">

        @foreach (var item in Model)
	    {
		    <div style="margin-bottom: 16px;" class="col-md-4">
                <div>
                    
                    @if (item.Picture == null)
                    {
                        <a href="@Url.Action("Create", "ProductSale", new { id = item.Id})">
                            <img style="width: 85%; height: 265px !important" class="img-thumbnail rounded mx-auto d-block img-fluid homeImage" src="~/img/logo-thumb.jpg" alt="Product Pic" />
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Create", "ProductSale", new { id = item.Id})">
                            <img style="width: 85%; height: 265px !important" class="img-thumbnail rounded mx-auto d-block img-fluid homeImage" src="data:image/jpg;base64,@(Html.Raw(Convert.ToBase64String(item.Picture)))" alt="Product Pic" />
                        </a>
                    }

                </div>
                <div class="text-center">
                    <h6>@item.ProductName</h6>
                    <h6>GH¢ @item.Price</h6>
                </div>
            </div>
	    }
    </div>
</div>

